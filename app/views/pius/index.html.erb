<div class="row mt-5">
  <div class="col-4">
    <div class="card" style="width: 18rem;">
      <% url = Gravatar.new(current_user.email).image_url %>
      <%= image_tag url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  <div class="col-8">
    <h1>Pius</h1>

    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pius.order(id: :desc).each do |piu| %>
          <tr>
            <td><%= piu.user.email %></td>
            <td><%= piu.content %></td>
            <td>
              <% if piu.photo.file? %>
                <%= image_tag piu.photo.url, class: "rounded-lg mb-3 img-size-limit" %>
              <% end %>
            </td>
            <p class="card-text">
              <small class="text-muted">
                <%= piu.created_at.strftime("%d/%m/%Y - %H:%M") %>
              </small>
            </p>
            <td><%= link_to 'Show', piu %></td>
            <% if current_user == piu.user %>
              <td><%= link_to 'Edit', edit_piu_path(piu) %></td>
              <td><%= link_to 'Destroy', piu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        
      </tbody>
    </table>
      <div>
        <% piu.replies.each do |reply| %>
          <%= render  "replies", reply: reply %>
        <% end %>
      </div>
    <% end %>

    <br>

    <%= link_to 'New Piu', new_piu_path %>
  </div>
</div>


<div class="row mt-5">
  <div class="col-4">
    <div class="card" style="width: 18rem;">
      <%= image_tag @party.image.url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= @party.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= @party.begin.strftime("%d/%m/%Y") %> ~ <%= @party.end.strftime("%d/%m/%Y") %></h6>
        <h6 class="card-subtitle mb-2 text-muted"><%= @party.hours %></h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  <div class="col-8">
    <%= form_tag add_student_parties_path(@party), :method => :post do %>
      <%= email_field_tag :email %>
      <%= hidden_field_tag :party_id, @party.id %>
      <%= submit_tag "Adicionar" %>
    <% end %>

    <div class="card">
      <div class="card-body">
        <!-- ALUNOS -->
        <% @party.users.each do |student| %>
          <%= render "user_attributes", student: student %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_party_path(@party) %> |
<%= link_to 'Back', parties_path %>
